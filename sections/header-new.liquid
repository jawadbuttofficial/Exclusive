<div class="header-new">
  <div class="logo">{{ section.settings.text }}</div>
  <div class="menu">
    <ul>
      {% for link in linklists['main-menu'].links %}
        <li class="menu-item {% if link.links.size > 0 %}has-dropdown{% endif %}">
          <a href="{{ link.url }}">{{ link.title }}</a>
          {% if link.links.size > 0 %}
            <ul class="dropdown">
              {% for sublink in link.links %}
                <li>
                  <a href="{{ sublink.url }}">{{ sublink.title }}</a>
                </li>
              {% endfor %}
            </ul>
          {% endif %}
        </li>
      {% endfor %}
    </ul>
  </div>
  <div class="actions">Actions</div>
</div>

{% style %}
  .header-new {
    display: grid;
    grid-template-columns: repeat(12, 1fr);
    grid-template-rows: 1fr;
    grid-column-gap: 0px;
    grid-row-gap: 0px;
    max-width: 1200px;
    margin: auto;
    padding: 20px 40px;
  }

  .header-new .logo {
    grid-area: 1 / 1 / 2 / 3;
  }
  .header-new .menu {
    grid-area: 1 / 3 / 2 / 10;
  }
  .header-new .actions {
    grid-area: 1 / 10 / 2 / 13;
  }
{% endstyle %}

{% schema %}
{
  "name": "Custom section",
  "settings": [
    {
      "type": "text",
      "id": "text",
      "label": "Logo Text",
      "default": "Exclusive"
    }
  ],
  "presets": [{ "name": "Default custom section" }],
  "tag": "header"
}
{% endschema %}
